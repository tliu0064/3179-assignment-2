{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average MinTemp by State (All Years)",
  "data": {
    "url": "weatherAUS.csv",
    "format": { "type": "csv", "parse": { "Date": "date" } }
  },
  "params": [
    { "name": "StateSelection", 
    "value": "All",
  "bind": {
"input": "select",
"options": [
"All",
"NT",
"QLD",
"NSW",
"WA",
"SA",
"External",
"VIC",
"TAS",
"ACT"
],
"labels":[
"All",
"NT",
"QLD",
"NSW",
"WA",
"SA",
"External",
"VIC",
"TAS",
"ACT"
],
"name": "State Selection: "
}
}
  ],
  "transform": [
    {
      "lookup": "Location",
      "from": {
        "data": { "url": "location_state.csv" },
        "key": "Location",
        "fields": ["State"]
      }
    },
    { "filter": "StateSelection == 'All' || datum.State == StateSelection" },
    { "calculate": "toNumber(datum.MinTemp)", "as": "MinTempNum" },
    { "filter": "isValid(datum.MinTempNum)" }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "sort": "-y",
      "axis": { "labelAngle": -45 }
    },
    "y": {
      "aggregate": "mean",
      "field": "MinTempNum",
      "type": "quantitative",
      "title": "Average MinTemp (°C)"
    },
    "color": { "field": "State", "type": "nominal", "legend": null },
    "tooltip": [
      { "field": "State", "type": "nominal" },
      {
        "aggregate": "mean",
        "field": "MinTempNum",
        "type": "quantitative",
        "title": "Avg MinTemp (°C)",
        "format": ".2f"
      },
      {
        "aggregate": "count",
        "field": "MinTempNum",
        "type": "quantitative",
        "title": "Days Count"
      }
    ]
  },
  "width": { "step": 80 },
  "height": 360
}
