{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average MinTemp by Location (2016â€“2017)",
  "data": { "url": "weatherAUS.csv" },
  "transform": [
    { "filter": "year(datum.Date) >= 2016 && year(datum.Date) <= 2017" },
    { "filter": "isValid(datum.MinTemp)" }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Location",
      "type": "nominal",
      "title": "Location",
      "sort": "-y",
      "axis": { "labelAngle": -45 }
    },
    "y": {
      "aggregate": "mean",
      "field": "MinTemp",
      "type": "quantitative",
      "title": "Average MinTemp (Â°C)"
    },
    "tooltip": [
      { "field": "Location", "type": "nominal" },
      {
        "aggregate": "mean",
        "field": "MinTemp",
        "type": "quantitative",
        "title": "Avg MinTemp (Â°C)",
        "format": ".2f"
      },
      {
        "aggregate": "count",
        "field": "MinTemp",
        "type": "quantitative",
        "title": "Days Count"
      }
    ]
  },
  "width": { "step": 14 },
  "height": 360
}


