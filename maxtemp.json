{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average MaxTemp by State (All Years)",
  "data": {
    "url": "weatherAUS.csv",
    "format": { "type": "csv", "parse": { "Date": "date" } }
  },
  "transform": [
    {
      "lookup": "Location",
      "from": {
        "data": { "url": "location_state.csv" },
        "key": "Location",
        "fields": ["State"]
      }
    },
    { "calculate": "toNumber(datum.MaxTemp)", "as": "MaxTempNum" },
    { "filter": "isValid(datum.MaxTempNum)" }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "sort": "-y",
      "axis": { "labelAngle": -45 }
    },
    "y": {
      "aggregate": "mean",
      "field": "MaxTempNum",
      "type": "quantitative",
      "title": "Average MaxTemp (°C)"
    },
    "color": { "field": "State", "type": "nominal", "legend": null },
    "tooltip": [
      { "field": "State", "type": "nominal" },
      {
        "aggregate": "mean",
        "field": "MaxTempNum",
        "type": "quantitative",
        "title": "Avg MaxTemp (°C)",
        "format": ".2f"
      },
      {
        "aggregate": "count",
        "field": "MaxTempNum",
        "type": "quantitative",
        "title": "Days Count"
      }
    ]
  },
  "width": { "step": 80 },
  "height": 360
}
