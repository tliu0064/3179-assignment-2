{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Daily Rainfall by State (Year Slider)",
  "data": {
    "url": "weatherAUS.csv",
    "format": { "type": "csv", "parse": { "Date": "date" } }
  },
  "params": [
    {
      "name": "YearSel",
      "value": 2016,
      "bind": { "input": "range", "min": 2008, "max": 2017, "step": 1, "name": "Year: " }
    }
  ],
  "transform": [
    { "calculate": "year(datum.Date)", "as": "Year" },
    {
      "lookup": "Location",
      "from": { "data": { "url": "location_state.csv" }, "key": "Location", "fields": ["State"] }
    },
    { "calculate": "toNumber(datum.Rainfall)", "as": "RainfallNum" },
    { "filter": "isValid(datum.RainfallNum) && isValid(datum.State)" },
    { "filter": "datum.Year == YearSel" }
  ],
  "mark": { "type": "line", "point": true },
  "encoding": {
    "x": { 
      "field": "State", 
      "type": "nominal", 
      "title": "State", 
      "sort": "-y" 
    },
    "y": {
      "aggregate": "mean",
      "field": "RainfallNum",
      "type": "quantitative",
      "title": "Average Daily Rainfall (mm)"
    },
    "tooltip": [
      { "field": "State", "type": "nominal", "title": "State" },
      { "aggregate": "mean", "field": "RainfallNum", "type": "quantitative", "title": "Mean (mm)", "format": ".2f" },
      { "aggregate": "count", "field": "RainfallNum", "type": "quantitative", "title": "Days" }
    ]
  },
  "width": 700,
  "height": 380
}
